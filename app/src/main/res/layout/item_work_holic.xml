<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    android:layout_marginRight="10dp">

   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      app:cardCornerRadius="20dp">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:orientation="vertical">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
   <ImageView
       android:scaleType="centerCrop"
       android:id="@+id/imgv_ban"
       android:src="@drawable/img3"
       android:layout_width="300dp"
       android:layout_height="80dp"/>

   <TextView
       android:id="@+id/topic"
       android:layout_marginLeft="10dp"
       android:layout_alignBottom="@id/imgv_ban"
       android:textSize="40dp"
       android:textColor="@color/white"
       android:text="진격의 거인"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <ImageView
       android:layout_marginLeft="10dp"
       android:layout_marginTop="15dp"
       android:layout_alignTop="@id/topic"
       android:layout_toRightOf="@id/topic"
       android:src="@drawable/baseline_arrow_forward_ios_24"
       android:layout_width="15dp"
       android:layout_height="15dp"/>
   </RelativeLayout>

   <LinearLayout
       android:layout_marginHorizontal="10dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <RelativeLayout
          android:layout_marginVertical="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
      <TextView
          android:id="@+id/topic_txt"
          android:textSize="30dp"
          android:text="애니 주접떠실분 구해요"
          android:layout_width="match_parent"
          android:layout_height="35dp"/>

         <ImageView
             android:id="@+id/topic_profile"
            android:layout_below="@id/topic_txt"
            android:src="@drawable/img4"
             android:layout_width="20dp"
             android:layout_height="20dp"/>

         <TextView
             android:layout_marginLeft="10dp"
             android:layout_below="@id/topic_txt"
             android:layout_toRightOf="@id/topic_profile"
             android:text="11명"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </RelativeLayout>
      <View
          android:background="#666"
          android:layout_width="match_parent"
          android:layout_height="0.3dp"/>
      <RelativeLayout
          android:layout_marginVertical="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:id="@+id/topic_txt2"
             android:textSize="30dp"
             android:text="애니 주접떠실분 구해요"
             android:layout_width="match_parent"
             android:layout_height="35dp"/>

         <ImageView
             android:id="@+id/topic_profile2"
             android:layout_below="@id/topic_txt2"
             android:src="@drawable/img4"
             android:layout_width="20dp"
             android:layout_height="20dp"/>

         <TextView
             android:layout_marginLeft="10dp"
             android:layout_below="@id/topic_txt2"
             android:layout_toRightOf="@id/topic_profile2"
             android:text="11명"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </RelativeLayout>
      <View
          android:background="#666"
          android:layout_width="match_parent"
          android:layout_height="0.3dp"/>
      <RelativeLayout
          android:layout_marginVertical="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:id="@+id/topic_txt3"
             android:textSize="30dp"
             android:text="애니 주접떠실분 구해요"
             android:layout_width="match_parent"
             android:layout_height="35dp"/>

         <ImageView
             android:id="@+id/topic_profile3"
             android:layout_below="@id/topic_txt3"
             android:src="@drawable/img4"
             android:layout_width="20dp"
             android:layout_height="20dp"/>

         <TextView
             android:layout_marginLeft="10dp"
             android:layout_below="@id/topic_txt3"
             android:layout_toRightOf="@id/topic_profile3"
             android:text="11명"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </RelativeLayout>

   </LinearLayout>

   </LinearLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>
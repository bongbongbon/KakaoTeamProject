<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friend.FriendFragment"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/bannerimg"
        android:layout_width="wrap_content"
        android:layout_height="100dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginVertical="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img2"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:text="영균"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bord"
            android:layout_marginTop="10dp"

            android:background="#959494"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginVertical="3dp"
            android:layout_below="@+id/bord"
            android:text="내 멀티프로필"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/img_arrow_down"
            android:layout_below="@+id/bord"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bord1"
            android:background="#959494"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginVertical="3dp"
            android:layout_below="@+id/bord1"
            android:text="생일인 친구"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/img_arrow_down"
            android:layout_below="@+id/bord1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bord2"
            android:background="#959494"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginVertical="3dp"
            android:layout_below="@+id/bord2"
            android:text="업데이트한 친구"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/img_arrow_down"
            android:layout_below="@+id/bord2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bord3"

            android:background="#959494"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginVertical="3dp"
            android:layout_below="@+id/bord3"
            android:text="추천 친구"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/img_arrow_down"
            android:layout_below="@+id/bord3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bord6"

            android:background="#959494"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20dp"
            android:id="@+id/tv_friend_cnt"
            android:layout_marginVertical="3dp"
            android:layout_below="@+id/bord6"
            android:text="친구 418"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/baseline_keyboard_arrow_up_24"
            android:layout_below="@+id/bord6"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
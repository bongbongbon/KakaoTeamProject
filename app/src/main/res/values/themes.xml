<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project01_KygTalk" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_color</item>

        <!-- 위에 시계나오는 부분 스테이터스바라고 하고 색상을 흰색으로 바꿨다. -->
        <item name="android:statusBarColor">@color/main_color</item>

        <!-- 글씨 나오게 하는것 -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- 액션바 사이즈 -->
        <item name="actionBarSize">50dp</item>

        <item name="fontFamily">@font/font_main</item>

    </style>

    <style name="Theme.Project01_KygTalk" parent="Base.Theme.Project01_KygTalk" />
</resources>